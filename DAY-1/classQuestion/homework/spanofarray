public class spanofarray {
    public static void main(String[] args) {
        int arr[] = { 10, 20, 5, 15, 11, 12, 20 };
    int max = -1;
    int min= arr[0];
int span = 0;
    for (int i = 0; i < arr.length; i++) {
        if (arr[i] > max) {
           max = arr[i];
        }
        if (arr[i] <min) {
            min = arr[i];
         }
         
    }
    span=max-min;
    System.out.println("SPAN OF ARRAY  "+span);
}
}